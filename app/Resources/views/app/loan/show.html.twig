<section class="content-header">
      <h1>
        Loan 
        <small>Previous detail</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="{{ path('loan_index') }}">Loans</a></li>
