<div class="box">
    <div class="box-header">
        {# <h5 class="box-title"> #}
            <i class="fa fa-user-circle-o" aria-hidden="true"></i> Client:
            <span>
                <a href="{{ loan.cli.cliId }}" class="btnShowClient">
                    {{ loan.cli.cliFirstName ~" "~ loan.cli.cliMiddleName ~" "~ loan.cli.cliFirstSurname ~" "~ loan.cli.cliSecondSurname }}
                </a>
                {# {{ client.cliFirstName ~" "~ client.cliMiddleName ~" "~ client.cliFirstSurname ~" "~ client.cliSecondSurname }} #}
            </span>
             
        {# </h5> #}
        
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="well ">
                        {% set loanId = app.request.get('loaId') %}
                        {% set hasPayments = srv_Loans.getCountLoanPaymentsDone(loanId) %}
                        This loan has 
                            {% if hasPayments %}
                                <a class="" href="{{ path('loanpayment_quotasHistory') }}?loaId={{loan.loaId}}"><span class="badge">{{ hasPayments }}</span></a>
                            {% else %}
                                <span class="badge">{{ hasPayments }}</span> 
                            {% endif %}
                            
                        payment(s) done
                    </div>
                <div class="well">
                     
                    
                    <table class="table table-striped">
                        <tbody>
                            {#
                            <tr>
                                <th>Loaid</th>
                                <td>{{ loan.loaId }}</td>
                            </tr>
                            #}
                            <tr>
                                <th>Loan Type</th>
                                <td><b>{{ loan.loc.locType }}</b></td>
                            </tr>
                            <tr>
                                <td>Code</td>
                                <td>{{ loan.loaCode }}</td>
                            </tr>
                            
                            <tr>
                                <td>Init Requested Amount:</td>
                                <td><span class="amounts">${{ loan.loaAmount|number_format(2, '.', ',') }}</span></td>
                            </tr>
                           {% if loan.loc.locKey == "inactive_rate" %}
                                <tr>
                                    <td>Return amount</td>
                                    <td><span class="amounts">
                                        {% set returnAmount = srv_Loans.getTotalReturnAmountRequested(loanId) %}
                                        ${{ returnAmount|number_format(2, '.', ',') }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Payments done</td>
                                    <td>
                                        <span class="amounts">
                                        {% set totalReturnAmountPaid = srv_Loans.getTotalReturnAmountPaid(loanId) %}
                                        ${{ totalReturnAmountPaid|number_format(2, '.', ',') }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Pending Amount</td>
                                    <td>
                                        <span class="amounts">${{ (returnAmount - totalReturnAmountPaid)|number_format(2, '.', ',') }}</span>
                                        
                                    </td>
                                </tr>
                           {% endif %}

                            {% if loan.loc.locKey == "active_rate" %}
                                {% set rate = 0 %}
                                <tr>
                                    <td>Default Interest Rate</td>
                                    <td><span class="amounts">{{ loan.loaRateInterestByDefault }}%</span></td>
                                </tr>
                                {% set pending =  srv_Loans.checkDeadLineToPay( loan.loaRateInterest, loan.loaRecurringDayPayment, loan.loaDeadline|date('Y-m-d'), srv_TimeZone.getNameTimeZone() ) %}
                                {% if pending %}
                                    <tr>
                                        <td>Current Interest Rate</td>
                                        <td>{% set rate = pending.rate %}   
                                             <span class="amounts">{{ rate }}%</span> 
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td>Current Interest Rate</td>
                                        <td>{% set rate = loan.loaRateInterest %}
                                            <span class="amounts">{{ loan.loaRateInterest }}%</span>
                                        </td>
                                    </tr>     
                                {% endif %}

                                {% set paidAmount = srv_Loans.checkPaymentsPerLoan(loan.loaId) %}
                                {% if paidAmount %}
                                    {% set money = (loan.loaAmount - paidAmount[0]['paidCapital']) %}
                                {% else %}
                                    {% set money = loan.loaAmount %}
                                {% endif %}
                                <tr>
                                    <td>Pending amount of interest rate</td>
                                    <td>
                                        <span class="amounts">
                                        ${{ (money)|number_format(2, '.', ',') }} x {{rate}}% <br>= 
                                        ${{  ((money) * (rate/100))|number_format(2, '.', ',') }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Pending to pay</th>
                                    <td>
                                        <span class="amounts">
                                        ( ${{ (money)|number_format(2, '.', ',') }} x {{rate}}%  ) + ${{ money|number_format(2, '.', ',') }} <br>= 
                                        ${{  ((money) * (rate/100) + (money))|number_format(2, '.', ',') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endif %}
                            <tr>
                                <td>Recurring days to pay</td>
                                <td>{{ loan.loaRecurringDayPayment }} Days</td>
                            </tr>
                            {% if loan.loc.locKey == "inactive_rate" %}
                                <tr>
                                    <td># Quotas</td>
                                    <td>{{ loan.loaQuotas }}</td>
                                </tr>
                            {% endif %}
                            {% if loan.loc.locKey == "active_rate" %}
                                <tr>
                                    <th>
                                        {% if hasPayments ==  0 %} 
                                            First payment date 
                                        {% else %} 
                                            Next payment date 
                                        {% endif %}
                                    </th>
                                    <td>
                                        {% if loan.loaCompleted == 0 %} 
                                            {% if loan.loaDeadline %}
                                                <i class="fa fa-calendar" aria-hidden="true"></i> <strong> {{ loan.loaDeadline|date('Y-m-d') }} </strong>
                                            {% endif %}
                                        {% else %}
                                            <strong>N/A</strong>    
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}

                            
                            
                            
                            {# 
                            <tr>
                                <th>Pending</th>
                                <td>{{ loan.loaPending }}</td>
                            </tr>
                            
                            {# 
                            <tr>
                                <th>Loaactive</th>
                                <td>{% if loan.loaActive %}Yes{% else %}No{% endif %}</td>
                            </tr>
                            #}
                            <tr>
                                <td>Created</td>
                                <td>{% if loan.loaCreated %} {{ srv_TimeZone.getTimeZone(loan.loaCreated|date('Y-m-d H:i:s')) }} {% endif %}</td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td>
                                    {% if loan.loaCompleted %} 
                                        <h4><span class="label label-success"><i class="fa fa-check-circle-o" aria-hidden="true"></i> Completed </span></h4>
                                    {% else %} 
                                        <h4><span class="label label-default"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Incomplete </span></h4>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>{{ loan.loaDescription }}</td>
                            </tr>
                        </tbody>
                    </table>

                    
                    
                    <ul class="list-inline">
                        <li>
                            <a class="btn btn-info marginBT" href="{{ path('loan_index') }}"><i class="fa fa-list" aria-hidden="true"></i> Back to the list</a>
                        </li>
                        <li>
                            <a class="btn btn-primary marginBT" href="{{ path('loan_edit', { 'loaId': loan.loaId }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                        </li>
                        <li>
                            {{ form_start(delete_form,{'attr':{"id":'formDelete'}} )  }}
                                <button class="btn btn-danger marginBT" type="submit"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            {# <button type="button" value="5" id="" class="btn bg-olive marginBT "><i class="fa fa-usd" aria-hidden="true"></i> Payment</button> #}
                            <a href="{{ path('loanpayment_new',{'loaId':loan.loaId} ) }}" id="" class="btn bg-olive marginBT "><i class="fa fa-money" aria-hidden="true"></i> Payment</a>
                        </li>
                    </ul>
                </div>    
            </div>
            <div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
                    {# {{ "now"|date("Y-m-d H:i:s", srv_TimeZone.getNameTimeZone()) }} #}

                    {# loan.loaRateInterest, loan.loaQuotas, loan.loaDeadline|date('Y-m-d') #}
                    {% if loan.loc.locKey == "active_rate" %}
                        {{ include('app/loan/_checkPendingQuotas.html.twig', {"rate":loan.loaRateInterest, "quotas":loan.loaRecurringDayPayment, "deadline":loan.loaDeadline|date('Y-m-d')}  )  }}
                    {% endif %}
                    {#
                    <h4>
                        <span class="">Payment history</span> - 
                        <small> 
                            Click <a class="" href="{{ path('loanpayment_quotasHistory') }}?loaId={{loan.loaId}}">here</a> to see the complete detail
                        </small>
                    </h4>
                    #}
                    


                    <div id="holderMainRight">
                        {% set arr =  srv_Loans.getAllDeteailLoan(loanId) %}
                        {% if loan.loc.locKey  == "inactive_rate" %}
                            <h4><span class="">Payments</span></h4>
                             <hr>
                             <div class="text-right">Click <a href="{{ path('loanpayment_quotasHistory') }}?loaId={{loan.loaId}}">here</a> to see the complete history</div><hr>
                            {{ include("app/loan/_inputNoRateEditPayments.html.twig",{"action":"show"}) }}
                        {% else %}
                            {{ include("app/loan/_inputWithRatePayments.html.twig",{"showResume":false}) }}
                        {% endif %}    
                        
                    </div>
                    {#
                    <table class="table table-striped" id="paymentList">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Payment date</th>
                                <th>Quota to pay</th>
                                <th>Paid amount</th>
                                <th>Paid date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set counter = 0 %}
                            {% for item in arr %}
                                {% set counter =  counter + 1 %}
                            <tr>
                                <td>{{ counter }}</td>
                                <td>
                                    {% if counter > 1 %}
                                        {{ item.lpa_max_payment_date|date_modify("-"~ (loan.loaRecurringDayPayment - 1 ) ~" day")|date("Y-m-d") }}
                                    {% else %}
                                        N/A
                                    {% endif %}    
                                    -
                                    {{ item.lpa_max_payment_date }}
                                </td>
                                <td><span class="amounts">${{ item.lpa_current_amount|number_format(2, '.', ',') }}</span></td>
                                <td>{% if item.lpa_paid_capital %}<span class="amounts">$ {{ item.lpa_paid_capital|number_format(2, '.', ',') }}</span> {% else %} Pending {% endif %}</td>
                                <td>{% if item.lpa_paid_date  %} {{  item.lpa_paid_date }} {% else %} Pending {% endif %}</td>
                            </tr>
                            
                            {% endfor %}
                        </tbody>
                    </table>
                    #}

            </div>
        </div>
    </div>
</div>            

