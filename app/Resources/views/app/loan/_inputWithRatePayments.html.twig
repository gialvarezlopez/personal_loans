                        <div class="text-right"><button id="addInput" class="btn btn-default"><i class="fa fa-plus-circle" aria-hidden="true"></i> Add item</button></div>
                        <div>
                            <h3><span class="labelCurrency">Total to pay:</span> <span id="total" class="label label-default">${{ totalToPay|number_format(2, '.', ',') }}</span></h3>
                            <h3><span class="labelCurrency">Total paid:</span> <span id="totalPaid" class="label label-default">${{ totalPaid|number_format(2, '.', ',') }}</span></h3>
                            <h3><span class="labelCurrency">Pending:</span> <span id="pending" class="label label-default">${{ (totalToPay - totalPaid)|number_format(2, '.', ',') }}</span></h3>
                        </div>
