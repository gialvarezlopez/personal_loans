<section class="content-header">
      <h1>
        Loans list
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('dashboard_index') }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Loans</li>
      </ol>
</section>
<hr>
<div class="box">
    <div class="box-header">
        <div class="row">
            <div class="col-md-4"><i class="fa fa-handshake-o" aria-hidden="true"></i> Total records: <span class="badge">{{ loans|length }}</span></div>
            <div class="col-md-4 col-md-offset-4 text-right">
               <form class="form-inline"> 
                    <div class="form-group">
                        <label>Status filtered by: </label> 
                        <select class="form-control" id="statusList">
                            <option value="all">All</option>
                            <option value="0">No Finished</option>
                            <option value="1">Finished</option>
                            <option value="2">Freezed</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
        <hr>
        {% set client = app.request.get('client')  %}
        {% set sta = app.request.get('sta')  %}
        {% if client > 0 %}
            
              {% if sta != "" %}
                {% set v = "?sta="~sta %}
              {% else %}
                {% set v = "" %}
              {% endif %}  
            <div class="text-right"><a href="{{ path('loan_index')  }}{{v}}">Click here to see all loans</a></div>
        {% endif  %}
    </div>
    
    <div class="box-body">
        <table class="table table-striped" id="loanList">
            <thead>
                <tr>
                    {# <th>Loaid</th> #}
                    <th>#</th>
                    <th>Code</th>
                    <th>Loan Type</th>
                    <th>Client Name</th>
                    <th>Requested Amount</th>
                    {#
                    <th>Rate Interest</th>
                    <th>Description</th>
                    #}
                    {# 
                    <th>Dead line</th>
                    <th>Quotas</th>
                    #}
                    {# <th>Pending Money</th>#}
                    <th>Status</th>
                    {# <th>Active</th> #}
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% set num = 1 %}
            {% for loan in loans %}
                <tr>
                    {# <td><a href="{{ path('loan_show', { 'loaId': loan.loaId }) }}">{{ loan.loaId }}</a></td> #}
                    <td>{{ num }}</td>
                    <td>{{ loan.loa_code }} </td>
                    <td>{{ loan.loc_type }}</td>
                    <td><a href="{{ loan.cli_id }}" class="btnShowClient"> {{ loan.cli_first_name ~" "~ loan.cli_middle_name ~" "~ loan.cli_first_surname ~" "~ loan.cli_second_surname }} </a></td>
                    <td><span class="amounts">${{ loan.loa_amount|number_format(2, '.', ',') }}</span></td>
                    {#
                    <td>{{ loan.loaRateInterest }}%</td>
                    <td>{{ loan.loaDescription }}</td>
                    #}
                    {# 
                    <td>{% if loan.loaDeadline %}{{ loan.loaDeadline|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ loan.loaQuotas }}</td>
                    
                    <td>{{ loan.loaPending }}</td>
                    #}
                    <td>
                        {% if loan.loa_completed == 1 %}
                            <span class="label label-success">Finished</span>
                        {% elseif loan.loa_completed == 2 %}
                            <span class="label label-danger">Freezed</span>
                        {% else %}
                            <span class="label label-default">No finished</span>
                        {% endif %}
                    </td>
                    {# <td>{% if loan.loaActive %}Yes{% else %}No{% endif %}</td> #}
                    <td>{% if loan.loa_created %} {{ srv_TimeZone.getTimeZone(loan.loa_created|date('Y-m-d H:i:s')) }} {% endif %}</td>
                    <td>
                        <ul class="list-inline">
                            <li><a href="{{ path('loanpayment_new',{'loaId':loan.loa_id} ) }}" class="btn bg-olive marginBT "><i class="fa fa-money" aria-hidden="true"></i> Payment</a></li>
                            <li>
                                <a class="btnShow btn btn-block btn-info marginBT" href="{{ path('loan_show', { 'loaId': loan.loa_id }) }}">show</a>
                            </li>
                            <li>
                                <a class="btn btn-block btn-primary marginBT" href="{{ path('loan_edit', { 'loaId': loan.loa_id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% set num = num + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
