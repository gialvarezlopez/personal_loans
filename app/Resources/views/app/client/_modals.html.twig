<!-- Modal -->
<div class="modal fade holderModal" id="modalShowClient" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><i class="fa fa-check" aria-hidden="true"></i> {% trans %}clients_info_title_client{% endtrans %}</h4>
      </div>
      <div class="modal-body">
        <div id="holderBodyModal"></div>
      </div>
      <div class="modal-footer">
        
        
        <a href="#" id="btnModalEditClient" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  {% trans %}general_btn_edit{% endtrans %}</a>
        {#
        <button type="button" value="" id="btnModalLoanClient" class="btn bg-olive btn-flat btnModalLoanClient" ><i class="fa fa-thumbs-up" aria-hidden="true"></i> New Loan</button>
        <button type="button" value="" id="btnModalLoanClient" class="btn btn-info btn-flat btnModalLoanClient" ><i class="fa fa-archive" aria-hidden="true"></i> My Loans</button>
        #}
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i>  {% trans %}general_btn_close{% endtrans %}</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade holderModal" id="modalLoans" tabindex="-1" role="dialog" aria-labelledby="myModalLoans">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLoans"><i class="fa fa-address-card-o"></i> Client</h4>
      </div>
      <div class="modal-body">
        <div id="holderBodyModalLoand"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>